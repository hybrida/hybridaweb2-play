# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET        /                       controllers.Application.index()


# Map static resources from the /public folder to the /assets URL path
GET        /assets/*file           controllers.Assets.at(path="/public", file)

# Other root pages
GET        /about                  controllers.About.index()
GET        /yeah                   controllers.Yeah.index()

# Info til introkurs
GET        /info/:name             controllers.About.personInfo(name)

# Heftig bl√¶stiside

GET        /oystein/:number        controllers.Oystein.someCode(number)


GET        /lol/:name              controllers.Lol.index(name)
GET        /lol                    controllers.Lol.noindex()
GET        /indok                  controllers.Indok.facepalm()                 
# Info til introkurs
GET        /info/:name             controllers.About.personInfo(name)


# Show some page describing the URL if all else fails
GET        /:arg                   controllers.Application.getter(arg: String)
