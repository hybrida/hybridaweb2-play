# Routes
# This file defines all application routes (Higher priority routes first)

# Standard layout accessible pages
GET         /                         controllers.Application.index()
GET         /proto                    controllers.Application.proto()

GET         /calendar                 controllers.Calendar.index()

GET         /calender                 trash.controllers.Calender.index()
GET         /kalender                 controllers.Calendar.calendarRender()

GET         /about                    trash.controllers.About.index()

GET         /article                  trash.controllers.Articles.index()
GET         /yeah                     trash.controllers.Yeah.index()
# Article and events
GET         /ArticleIn                controllers.ArticleIn.index()
POST        /ArticleIn                controllers.ArticleIn.save()
GET         /ArticleOut/:id           controllers.ArticleOut.index(id)

GET         /update                   controllers.Update.index()
POST        /update                   controllers.Update.post()
GET         /update/utgaver           controllers.Update.utgaver()
GET         /update/redaksjon         controllers.Update.redaksjon()

# Info til introkurs
GET         /info/:name               trash.controllers.About.personInfo(name)

# Heftig bl√¶stiside
GET         /gitgud                   trash.controllers.GitGud.shrek()

GET         /GriffensOrden            trash.controllers.griffensOrden.index()
GET         /NyStudent                trash.controllers.NyStudent.index()
GET         /oystein/:number          trash.controllers.Oystein.someCode(number)
GET         /hybrida                  controllers.OmHybrida.index()
GET         /styret                   controllers.OmStyret.index()
GET         /lol                      trash.controllers.Lol.noindex()
POST        /lol/clear                trash.controllers.Lol.clearNameData()
POST        /lol                      trash.controllers.Lol.index()
GET         /indok                    trash.controllers.Indok.facepalm()

# Ebean example
GET         /ebean                    examples.controllers.ExampleEbean.index()
POST        /ebean                    examples.controllers.ExampleEbean.add()
POST        /ebean/clear              examples.controllers.ExampleEbean.clear()

# Newsfeed
GET         /feed                     controllers.Feed.index()
POST        /feed                     controllers.Feed.save()
POST        /feedClear                controllers.Feed.clearAll()
GET         /feed/:newsTitle          controllers.Feed.generateArticle(newsTitle)

GET         /event                    controllers.Event.index()
POST        /event                    controllers.Event.save()
GET         /event/:eventId           controllers.Event.generateEvent(eventId)
POST        /event/updateUser         controllers.Event.updateUsers()
POST        /event/removeUser         controllers.Event.removeUsers()

GET         /ImgUp                    examples.controllers.ExampleImageUpload.index()
POST        /ImgUp                    examples.controllers.ExampleImageUpload.upload()

# Random number generator
GET         /random                   trash.controllers.RandomInt.randomPage()
POST        /random                   trash.controllers.RandomInt.newRandom()

# Backup memory database
GET         /backup                   controllers.BackupDB.index()

GET         /ExampleCookies           examples.controllers.ExampleCookies.index()
POST        /UpdateCookies            examples.controllers.ExampleCookies.updateCookie()
GET         /UpdateCookies            examples.controllers.ExampleCookies.updateCookie()
POST        /ClearCookies             examples.controllers.ExampleCookies.clearAllCookies()
GET         /ClearCookies             examples.controllers.ExampleCookies.clearAllCookies()

GET         /Chat                     controllers.Chat.connectClient()
GET         /ChatServer               controllers.Chat.socket()

GET         /search                   controllers.Search.index()

GET         /ExampleDatabase          examples.controllers.ExampleDatabase.index()

GET         /login                    controllers.SSOLogin.login(returnarg: String)
GET         /logout                   controllers.SSOLogin.logout()
GET         /verifylogin              controllers.SSOLogin.verifylogin()
GET         /contactforuser           controllers.ContactForUser.index()


GET         /profil/:u                controllers.Profile.index(u)
GET         /profil/:u/rediger        controllers.Profile.edit(u)
GET         /profil/lagre             controllers.Profile.submit
POST        /profil/edit              controllers.Profile.editUserData()


# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file             controllers.Assets.at(path="/public", file)

GET         /unauthorized             controllers.Application.showUnauthorizedAccess()

# Show some page describing the URL if all else fails
GET         /$anything<.*>            controllers.Application.show404(anything: String)
GET         /error400/:error          controllers.Application.show400(error)
