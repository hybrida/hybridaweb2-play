# Routes
# This file defines all application routes (Higher priority routes first)

# Standard layout accessible pages
GET         /                               controllers.Application.index()

# Static info pages
GET         /nystudent                      controllers.NyStudent.index()
GET         /hybrida                        controllers.OmHybrida.index()
GET         /styret                         controllers.OmStyret.index()

# Calendar
GET         /kalender                       controllers.Calendar.index()

# Articles
GET         /artikkel/ny                    controllers.ArticleIn.index()
POST        /artikkel/ny                    controllers.ArticleIn.save()
GET         /artikkel/:articleId            controllers.ArticleOut.index(articleId)

# Events
GET         /event                          controllers.Event.index()
POST        /event                          controllers.Event.save()
GET         /event/:eventId                 controllers.Event.generateEvent(eventId)
POST        /event/oppdater                 controllers.Event.updateUsers()
POST        /event/fjern                    controllers.Event.removeUsers()

# Newsfeed
GET         /feed                           controllers.Feed.index()
POST        /feed                           controllers.Feed.save()
POST        /feed/clear                     controllers.Feed.clearAll()
GET         /feed/:newsTitle                controllers.Feed.generateArticle(newsTitle)


# Update
GET         /update                         controllers.Update.index()
POST        /update                         controllers.Update.post()
GET         /update/utgaver                 controllers.Update.utgaver()
GET         /update/redaksjon               controllers.Update.redaksjon()

# Backup memory database
GET         /backup                         controllers.BackupDB.index()

# Search
GET         /search                         controllers.Search.index()

# Login
GET         /login                          controllers.SSOLogin.login(returnarg: String)
GET         /logout                         controllers.SSOLogin.logout()
GET         /verifylogin                    controllers.SSOLogin.verifylogin()
GET         /contactforuser                 controllers.ContactForUser.index()

# Profile
GET         /profil/:userName               controllers.Profile.index(userName)
GET         /profil/:userName/rediger       controllers.Profile.edit(userName)
POST        /profil/:userName/rediger       controllers.Profile.editUserData(userName)



# TEST
# # New design
GET         /proto                          controllers.Application.proto()
# # Chat
GET         /Chat                           controllers.Chat.connectClient()
GET         /ChatServer                     controllers.Chat.socket()



# EXAMPLES
# # Ebean
GET         /examples/ebean                 examples.controllers.ExampleEbean.index()
POST        /examples/ebean                 examples.controllers.ExampleEbean.add()
POST        /examples/ebean/clear           examples.controllers.ExampleEbean.clear()
# # ImageUpload
GET         /examples/imageupload           examples.controllers.ExampleImageUpload.index()
POST        /examples/imageupload           examples.controllers.ExampleImageUpload.upload()
# # Cookies
GET         /examples/cookies               examples.controllers.ExampleCookies.index()
POST        /examples/cookies/update        examples.controllers.ExampleCookies.updateCookie()
GET         /examples/cookies/update        examples.controllers.ExampleCookies.updateCookie()
POST        /examples/cookies/clear         examples.controllers.ExampleCookies.clearAllCookies()
GET         /examples/cookies/clear         examples.controllers.ExampleCookies.clearAllCookies()
# # Database
GET         /examples/database              examples.controllers.ExampleDatabase.index()



# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                   controllers.Assets.at(path="/public", file)

GET         /unauthorized                   controllers.Application.showUnauthorizedAccess()

# Show some page describing the URL if all else fails
GET         /$anything<.*>                  controllers.Application.show404(anything: String)
GET         /error400/:error                controllers.Application.show400(error)
